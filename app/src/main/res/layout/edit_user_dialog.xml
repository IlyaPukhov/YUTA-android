<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/light_dialog_background">

    <Button
            android:id="@+id/close"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:contentDescription="@string/close_button"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:background="@drawable/close_icon"
            style="@style/button_style"
            tools:ignore="TouchTargetSizeCheck" />

    <TextView
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edit_text"
            android:textAppearance="@style/reload_text"
            android:textAlignment="center"
            android:fontFamily="@font/montserrat_semibold"
            android:autoSizeTextType="uniform"
            app:layout_constraintTop_toBottomOf="@id/close"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp" />

    <ImageView
            android:id="@+id/separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/separator"
            android:contentDescription="@string/separator"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <EditText
            android:id="@+id/biography"
            android:maxLength="200"
            android:inputType="textMultiLine|textAutoComplete|textAutoCorrect"
            android:importantForAutofill="no"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:hint="@string/biography"
            android:textAppearance="@style/login"
            android:layout_centerVertical="true"
            android:background="@drawable/edit_field_background"
            android:layout_alignParentEnd="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/separator"
            android:paddingHorizontal="16dp"
            android:gravity="start|top"
            android:paddingVertical="10dp" />

    <com.santalu.maskara.widget.MaskEditText
            app:mask="+7 (___) ___-__-__"
            app:maskCharacter="_"
            app:maskStyle="completable"
            android:id="@+id/phone_number"
            android:autofillHints="phone"
            android:inputType="phone"
            android:importantForAutofill="yes"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:hint="@string/phone_number"
            android:textAppearance="@style/login"
            android:layout_centerVertical="true"
            android:background="@drawable/edit_field_background"
            android:layout_alignParentEnd="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/biography"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp"/>

    <EditText
            android:id="@+id/email"
            android:autofillHints="emailAddress"
            android:inputType="textEmailAddress"
            android:importantForAutofill="yes"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:hint="@string/email"
            android:textAppearance="@style/login"
            android:layout_centerVertical="true"
            android:background="@drawable/edit_field_background"
            android:layout_alignParentEnd="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phone_number"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp" />

    <EditText
            android:id="@+id/vk"
            android:inputType="text"
            android:importantForAutofill="no"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:hint="@string/vk"
            android:textAppearance="@style/login"
            android:layout_centerVertical="true"
            android:background="@drawable/edit_field_background"
            android:layout_alignParentEnd="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/email"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp" />

    <Button
            android:id="@+id/submit"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:background="@drawable/login_button"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:textAppearance="@style/reload_button"
            android:text="@string/edit_button"
            android:textAlignment="center"
            android:fontFamily="@font/montserrat_bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:paddingHorizontal="30dp"
            android:paddingVertical="5dp"
            tools:ignore="TouchTargetSizeCheck"
            app:layout_constraintTop_toBottomOf="@+id/vk"
            android:layout_marginTop="20dp"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            android:autoSizeTextType="uniform"
            android:maxWidth="32dp" />

    <TextView
            android:id="@+id/error_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/error_message"
            android:textAlignment="center"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/vk"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@id/submit"
            android:layout_marginBottom="12dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
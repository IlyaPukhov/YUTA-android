<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_background">

    <Button
            android:id="@+id/close"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:contentDescription="@string/close_button"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:background="@drawable/close_icon"
            style="@style/orange_button_style"
            tools:ignore="TouchTargetSizeCheck" />

    <TextView
            android:id="@+id/delete_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/delete_text"
            android:textAppearance="@style/reload_text"
            android:textAlignment="center"
            android:fontFamily="@font/montserrat_semibold"
            android:autoSizeTextType="uniform"
            app:layout_constraintTop_toBottomOf="@id/close"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp" />

    <TextView
            android:id="@+id/create_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/delete_desc"
            android:textAppearance="@style/dialog_desc"
            android:textAlignment="textStart"
            android:fontFamily="@font/montserrat_medium"
            android:autoSizeTextType="uniform"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/separator"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp" />

    <ImageView
            android:id="@+id/separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/separator"
            android:contentDescription="@string/separator"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/delete_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@drawable/login_button"
            style="@style/orange_button_style"
            android:textAppearance="@style/reload_button"
            android:text="@string/delete_button"
            android:textAlignment="textStart"
            android:fontFamily="@font/montserrat_bold"
            android:autoSizeTextType="uniform"
            android:drawablePadding="10dp"
            app:drawableLeftCompat="@drawable/delete_photo_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="22dp"
            android:paddingHorizontal="30dp"
            android:paddingVertical="5dp"
            tools:ignore="TouchTargetSizeCheck"
            app:layout_constraintTop_toBottomOf="@id/create_desc"
            android:layout_marginTop="40dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="footer_text">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="footer_description">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="header_text">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="auth_text">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="login">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#73000000</item>
        <item name="android:textColorHint">#73000000</item>
    </style>

    <style name="login_button">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="error_message">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FF0000</item>
    </style>

    <style name="loading">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="nav_item">
        <item name="android:textSize">11sp</item>
        <item name="android:letterSpacing">0.12</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>
</resources>